---
import BaseLayout from '../layouts/BaseLayout.astro'

const pageTitle = "About Me";

const identity = {
	firstName: "Joshua",
	country: "USA",
	occupation: "Barista",
	hobbies: ["playing guitar", "basket weaving"]
};

const skills = ["HTML", "CSS", "JavaScript", "React", "Astro"];

const happy = true;
const finished = false;
const goal = 3;

const skillColor = "cornflowerblue";
const altSkillColor = "red";
const fontWeight = "bold";
const textCase = "uppercase";
---

<BaseLayout pageTitle={pageTitle}>
	<p>I am a web developer working through Astro's introductory tutorial.</p>
		<p>Here are a few facts about me: </p>
		<ul>
			<li>My name is {identity.firstName}</li>
			<li>I live in the {identity.country}</li>
			<li>I am a {identity.occupation.toLowerCase()}</li>
			<li>Two of my hobbies are {identity.hobbies[0]} and {identity.hobbies[1]}.</li>
		</ul>
		<p>My skillset includes: </p>
		<ul id="skills">
			{skills.map(skill => <li class="skill">{skill}</li>)}
		</ul>
		
		{happy && <p>I am happy to be learning Astro!</p>}
		{finished && <p>I finished this tutorial!</p>}
		{goal === 3 ? <p>My goal is to finish in 3 days.</p> : <p>My goal is not 3 days.</p>}
</BaseLayout>

<style is:global define:vars={{skillColor, altSkillColor, fontWeight, textCase}}>
	h1 {
	  color: rebeccapurple;
	  font-size: 4rem;
	}

	.skill {
		color: var(--skillColor);
		font-weight: var(--fontWeight);
		text-transform: var(--textCase);
	}

	.skill:nth-child(even) {
		color: var(--altSkillColor);
	}
</style>